<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/form.css">
<link rel="stylesheet" href="/css/product.css">
</head>

<body>
<%- include('../includes/navigation.ejs') %>
<main>
    <header>
        <h1><%= editing ? `Edit - ${product.title}` : 'Add Product' %></h1>
    </header>
    <form class="product-form" action="/admin/<%= editing ? 'edit-product' : 'add-product' %>" method="POST">
        <% if (editing) { %>
        <input type="hidden" name="id" value="<%= product.id %>">
        <% } %>
        <div class="form-control">
            <label for="title">Title</label>
            <input type="text" name="title" id="title" value="<%= editing ? product.title : '' %>" />
        </div>
        <div class="form-control">
            <label for="imageUrl">Image Url</label>
            <input type="text" name="imageUrl" id="imageUrl" value="<%= editing ? product.imageUrl : '' %>" />
        </div>
        <div class="form-control">
            <label for="description">Description</label>
            <textarea name="description" id="description"><%= editing ? product.description : '' %></textarea>
        </div>
        <div class="form-control">
            <label for="price">Price</label>
            <input type="number" name="price" id="price" step="0.01" value="<%= editing ? product.price : '' %>" />
        </div>
        <button type="submit">
            <%= editing ? 'Update Product' : 'Add Product' %>
        </button>
    </form>
</main>

<%- include('../includes/end.ejs') %>